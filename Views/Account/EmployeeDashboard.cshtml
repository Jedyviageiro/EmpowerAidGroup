@{
    Layout = null;
}


@model empoweraidgroup.Models.EmployeeDashboardModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="~/css/employeeDashboard.css">
    <script src="https://kit.fontawesome.com/3eecc2cac4.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <div class="banner">
        <nav class="flex-div">
            <div class="nav-left">
                <h1>EmpowerAid Group</h1>
            </div>
            <div class="nav-right">
                <div class="profile-icon">
                    <i class="fa fa-user"></i>
                    <!-- Display the username from the model -->
                    <h2>Welcome, @Context.Session.GetString("loggedUser")!</h2>

                    <a href="@Url.Action("Logout", "Employee")" title="Logout"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </nav>

        <div class="sidebar">
            <ul>
                <li><a href="@Url.Action("ViewTasks", "EmployeeDashboard")"><i class="fa fa-tasks"></i> View Tasks</a></li>
                <li><a href="@Url.Action("ShowProfile", "EmployeeProfile")"><i class="fa fa-user-circle"></i> Profile</a></li>
                <li><a href="@Url.Action("ContactSupport", "Employee")"><i class="fa fa-headset"></i> Support</a></li>
            </ul>
        </div>

        <div class="content">
            <h2>Welcome to the Employee Dashboard!</h2>
            <p>Have a great day ahead of you! Work diligently and relentlessly. <br> Be the best version of yourself.</p>
        </div>

        <div class="welcome-section">
            <img src="~/images/svg1.svg">
        </div>
    </div>

</body>
</html>
