@{
    ViewData["Title"] = "Edit Employee";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/editEmployee.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
</head>
<body>
    <h2>Edit Employee</h2>

    <!-- Check for success message -->
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-success">
            @ViewData["Message"]
        </div>
    }

    <!-- Employee Edit Form -->
    @if (Model.Employee != null)
    {
        <form asp-action="UpdateEmployee" method="post">
            <input type="hidden" name="employee_id" value="@Model.Employee.Id">
            Name: <input type="text" name="name" value="@Model.Employee.Name" required><br>
            Email: <input type="email" name="email" value="@Model.Employee.Email" required><br>
            Age: <input type="number" name="age" value="@Model.Employee.Age" required><br>
            Gender: <input type="text" name="gender" value="@Model.Employee.Gender" required><br>
            Marital Status: <input type="text" name="marital_status" value="@Model.Employee.MaritalStatus" required><br>
            Phone: <input type="text" name="phone" value="@Model.Employee.Phone" required><br>
            Hire Date: <input type="date" name="hire_date" value="@Model.Employee.HireDate" required><br>
            Position: <input type="text" name="position" value="@Model.Employee.Position" required><br>
            <input type="submit" value="Update Employee">
        </form>

        <!-- Delete Employee Form -->
        <form asp-action="RemoveEmployee" method="post" style="margin-top: 20px;">
            <input type="hidden" name="employee_id" value="@Model.Employee.Id">
            <input type="submit" value="Delete Employee" onclick="return confirm('Are you sure you want to delete this employee?');">
        </form>
    }
</body>
</html>
